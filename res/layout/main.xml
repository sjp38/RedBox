<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout android:id="@+id/linearLayout2"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="true">
        <org.clc.android.app.redbox.widget.PhoneNumberEditWidget
            android:layout_height="wrap_content" android:id="@+id/number_input_textView"
            android:layout_weight="1" android:layout_width="wrap_content">
        </org.clc.android.app.redbox.widget.PhoneNumberEditWidget>
        <Button android:text="@string/add_number_button"
            android:id="@+id/add_number_button"
            android:layout_width="wrap_content" android:onClick="onAddNumberClicked"
            android:layout_gravity="center" android:layout_height="match_parent"></Button>
    </LinearLayout>
    <ListView android:id="@+id/numbersList"
        android:scrollbarStyle="outsideOverlay" android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
