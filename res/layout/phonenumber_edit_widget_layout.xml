<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@android:drawable/edit_text">
    <EditText android:id="@+id/phonenumber_editText"
        android:layout_weight="1" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:singleLine="true"
        android:background="@null" android:inputType="phone" android:layout_gravity="center">
        <requestFocus></requestFocus>
    </EditText>
    <Button android:id="@+id/phonenumber_edit_menu_button"
        android:layout_width="wrap_content" android:text=""
        android:layout_height="wrap_content" android:background="@drawable/phonenumber_edit_widget_menu" android:layout_gravity="center"/>

</LinearLayout>
